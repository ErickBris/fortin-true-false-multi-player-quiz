<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tranbackground"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|top"
        android:layout_marginTop="25dp"
        android:orientation="vertical" >
        
        <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:rotation="180"
        android:scaleType="fitXY"
        android:src="@drawable/incorr" />
        
           <TextView
        android:id="@+id/txtpl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtpl1"
        android:layout_below="@+id/img"
        android:layout_marginTop="18dp"
        android:text="Large Text"
        android:rotation="180"
        android:textColor="#ec008b"
        android:textSize="25dp"/>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:layout_marginBottom="25dp"
        android:orientation="vertical" >
  	<TextView
        android:id="@+id/txtpl1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Large Text"
        android:textColor="#ec008b"
        android:textSize="25dp"
        />
  
      <ImageView
        android:id="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/img"
        android:layout_alignParentBottom="true"
        
        android:src="@drawable/incorr" />
        </LinearLayout>
</LinearLayout>
